---
// Data
import { aboutMeData } from "../data/personalData";
---

<article
  class="justify-center mt-6 py-5 px-3 gap-y-6
    border-highlight
  text-gray-700 dark:text-gray-300"
>
  <div class="flex w-full gap-4">
    <div class="w-[70%] text-pretty text-gray-950 dark:text-gray-100">
      <p set:html={aboutMeData.firstParagraph} />
      <p set:html={aboutMeData.secondParagraph} />
      <p set:html={aboutMeData.thirdParagraph} />
    </div>
    <div class="flex flex-col justify-center">
      <img
        src={aboutMeData.image}
        class="size-36 rounded-full shadow-xl"
        alt="Foto de la sección Sobre Mí"
      />
    </div>
  </div>
</article>
