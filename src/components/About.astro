---
// Data
import { aboutMeData } from "../data/personalData";
---

<article
  class="section-child flex flex-col md:flex-row items-center justify-center
    mt-6 py-6 px-6 gap-5 md:gap-11
    container-highlight
  text-gray-700 dark:text-gray-300"
>
  <div class="text-pretty text-gray-950 dark:text-gray-100 order-2 md:order-1">
    <p class="mb-6" set:html={aboutMeData.firstParagraph} />
    <p class="mb-6" set:html={aboutMeData.secondParagraph} />
    <p set:html={aboutMeData.thirdParagraph} />
  </div>
  <img
    src={aboutMeData.image}
    class="object-cover w-44 md:w-48 h-full rounded-full order-1 md:order-2"
    alt="Foto de Miguel"
    loading="lazy"
  />
</article>
