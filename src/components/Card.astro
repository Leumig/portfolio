---
import CertificateIcon from "../icons/Certificate.astro";

interface Data {
  description: string;
  formation: {
    label: string;
    title: string;
    university: string;
  };
}

const data = Astro.props.data as Data;
---

<div
  class="flex flex-col justify-center items-center
    gap-3 mx-4 px-3 py-2
    border rounded-xl border-purple-500
    text-center text-black"
>
  <CertificateIcon class="size-16 text-purple-500" />
  <h2 class="text-2xl font-bold text-purple-500">{data.formation.label}</h2>
  <p class="text-white">{data.formation.title}</p>
  <hr class="border border-purple-500 w-[98%]">
  <p class="text-white">{data.formation.university}</p>
</div>
