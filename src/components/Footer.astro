---
// Icon
import ArrowIcon from "../icons/Arrow.astro";

// Current Year
const currentYear = new Date().getFullYear();
---

<footer
  class="flex flex-col justify-center items-center mt-5
    w-full md:max-w-3xl lg:max-w-4xl m-auto
    opacity-90
    font-bold dark:font-semibold
  text-gray-700 dark:text-zinc-100/90"
>
  <a
    href="/#inicio"
    class="flex flex-col justify-center items-center gap-y-1 mb-4 p-1
    hover:text-purple-700 dark:hover:text-purple-400 transition"
  >
    <ArrowIcon />
    Volver a Inicio
  </a>
  <div
    class="flex flex-col items-center gap-3 sm:flex-row sm:justify-between
      w-full mx-auto py-4 mb-5 mt-9"
  >
    <span class="text-sm text-center sm:text-start order-2 sm:order-1"
      >© {currentYear}. Hecho por Miguel Ángel Gil.
    </span>
    <ul
      class="flex flex-wrap justify-center gap-x-4 mt-3 sm:mt-0 text-sm
        order-1 sm:order-2"
    >
      <li>
        <a href="/#habilidades" class="hover:underline p-1">Habilidades</a>
      </li>
      <li>
        <a href="/#proyectos" class="hover:underline p-1">Proyectos</a>
      </li>
      <li>
        <a href="/#sobre-mi" class="hover:underline p-1">Sobre Mí</a>
      </li>
    </ul>
  </div>
</footer>
