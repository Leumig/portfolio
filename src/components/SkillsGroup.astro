---
interface Skill {
  name: string;
  class: string;
  icon: any;
}

const { skills, title } = Astro.props;
const skillsArray: Skill[] = Object.values(skills);
---

<h3
  class="flex justify-center sm:justify-start sm:ml-5
    text-2xl font-semibold text-gray-800 dark:text-slate-200"
>
  {title}
</h3>

<div class="flex flex-wrap gap-x-4 gap-y-3 justify-center">
  {
    skillsArray.map((skill: Skill) => (
      <span
        class={`select-none flex justify-center items-center w-44 py-2 
          text-1xl font-bold dark:font-semibold 
          rounded-2xl border border-transparent dark:border-white/10 
        dark:bg-black/10 hover:scale-110
          transition-all duration-100 ease-in-out ${skill.class}`}
      >
        <skill.icon class="w-8 h-8 mr-1" />
        {skill.name}
      </span>
    ))
  }
</div>
