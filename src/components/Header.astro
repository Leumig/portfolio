import ThemeToggle from './ThemeToggle.astro'

const navItems = [
  {
    title: "Inicio",
    label: "inicio",
    href: "#inicio",
  },
  {
    title: "Habilidades",
    label: "habilidades",
    href: "#habilidades",
  },
  {
    title: "Proyectos",
    label: "proyectos",
    href: "#proyectos",
  },
  {
    title: "Contacto",
    label: "contacto",
    href: "#contacto",
  },
  {
