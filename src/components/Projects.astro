---
interface Project {
  title: string;
  description: string;
  tags: string[];
  image: string;
}

import { projectsData } from "../data/projectsData";
const { tags } = Astro.props;
---

{
  projectsData.map((project: Project) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{project.title}</h3>
      <p class="text-lg mb-4 text-pretty">{project.description}</p>
      <ul>
        {project.tags.map((tag: string) => {
          <li>{tag}</li>;
        })}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={project.image}
        alt={`Imagen del proyecto ${project.image}`}
      />
    </article>
  ))
}
