      <h2
        class="text-3xl text-gray-800 dark:text-white font-semibold mb-6 flex gap-x-3 items-center"
      >
        <CodeIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <!-- SECTION PROJECTS -->
    <SectionContainer id="proyectos">
      <h2
        class="text-3xl text-gray-800 dark:text-white font-semibold mb-6 flex gap-x-3 items-center"
      >
        <CodeIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
